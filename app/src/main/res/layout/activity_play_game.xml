<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_question"
    tools:context=".PlayGameActivity">

    <!-- Wrap the content with NestedScrollView -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Use LinearLayout as the container for question items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Question Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <!-- Question TextView -->
                <TextView
                    android:id="@+id/question1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question 1:"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:textSize="24sp"
                    android:textColor="@color/white"/>

                <!-- RadioGroup for Question 1 -->
                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Radio Buttons for Question 1 -->
                    <!-- ... -->

                </RadioGroup>
            </LinearLayout>

            <!-- Question Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <!-- Question TextView -->
                <TextView
                    android:id="@+id/question2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question 2:"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:textSize="24sp"
                    android:textColor="@color/white"/>

                <!-- RadioGroup for Question 2 -->
                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/choose2a"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="cau a"
                        tools:ignore="TouchTargetSizeCheck" />
                    <!-- Radio Buttons for Question 2 -->
                    <!-- ... -->

                </RadioGroup>
            </LinearLayout>

            <!-- Add more Question Items as needed -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Next Button -->
    <Button
        android:id="@+id/button_next_question"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_next"
        android:contentDescription="Next"
        android:text=""
        app:layout_constraintTop_toBottomOf="@+id/nestedScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.82" />

</androidx.constraintlayout.widget.ConstraintLayout>